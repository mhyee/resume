\documentclass[10pt,letterpaper]{article}

\usepackage[utf8]{inputenc}
\usepackage[T1]{fontenc}
\usepackage[margin={2.0cm,1.5cm}]{geometry}
\usepackage{changepage}
\usepackage{libertine}
\usepackage{microtype}
\usepackage{titlesec}
\usepackage{enumitem}
\usepackage{xcolor}
\usepackage{relsize}
\usepackage{hyperref}

\titleformat*{\section}{\Large\bfseries\scshape}
\definecolor{myblue}{rgb}{0.18,0.31,0.65}
\hypersetup{colorlinks=true,urlcolor=myblue}
\pagestyle{empty}
\setlength{\parindent}{0pt}
\setlist{nolistsep}

\makeatletter
\newcommand\HUGE{\@setfontsize\Huge{30}{36}}
\makeatother

\newcommand{\indentleft}{1em}
\newcommand{\indentright}{0em}
\newcommand{\indenthang}{1.5em}
\newcommand{\interlist}{0.5em}
\newcommand{\postsubhead}{-0.7em}
\newcommand{\postsection}{-1em}

\begin{document}
\raggedright

  \begin{center}
    {\HUGE\textbf{<%= contact["name"] %>}}

<% site = contact["site"] %>
<% github = contact["github"] %>
<% email = contact["email"] %>
    \href{http://<%= site %>}{<%= site %>}
    \textbullet\
    \href{http://<%= github %>}{<%= github %>}
    \textbullet\
    \href{mailto:<%= email %>}{<%= email %>}
<% if contact["address"] && contact["cell"] %>
    \\
    \vspace{-0.5ex}
    <%= contact["address"] %>
    \textbullet\
    <%= contact["cell"] %>
<% end #if %>
<% if contact["citizenship"] %>
    \\
    \textbf{<%= contact["citizenship"] %>}
<% end #if %>
    \hrule
  \end{center}

  \section*{Experience}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
<% work.each_with_index do |entry, index| %>
      \textbf{<%= entry["title"] %>}
      \hfill
      \textbf{<%= entry["location"] %>}\\
      \emph{<%= entry["employer"] %>}
      \hfill
      \emph{<%= entry["date"] %>}
<% if entry["description"] %>
      \begin{itemize}
<% entry["description"].each do |item| %>
        \item <%= item %>
<% end #each %>
      \end{itemize}
<% end #if %>
<% if index != work.size - 1 %>
      \vspace{\interlist}

<% end #if %>
<% end #each_with_index %>
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Publications}
    \vspace{\postsubhead}
<% publications.each_with_index do |entry, index| %>
      \leftskip=\indentleft
      \hangindent=\indenthang
      <%= entry["authors"] %> (<%= entry["date"] %>).
      <%= entry["title"] %>, \emph{<%= entry["in"] %>}.
<% if index != publications.size - 1 %>
      \vspace{\interlist}

<% end #if %>
<% end #each_with_index %>
    \vspace{\postsection}

  \section*{Technical Skills}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
      \begin{itemize}
<% skills.each do |entry| %>
        \item <%= entry %>
<% end #each %>
      \end{itemize}
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Education}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
<% education.each_with_index do |entry, index| %>
      \textbf{<%= entry["level"] %>}
      \hfill
      \textbf{<%= entry["location"] %>}\\
      \emph{<%= entry["institution"] %>}
      \hfill
      \emph{<%= entry["date"] %>}
<% if entry["notes"] %>
      \begin{itemize}
<% entry["notes"].each do |item| %>
        \item <%= item %>
<% end #each %>
      \end{itemize}
<% end #if %>
\vspace{\interlist}
<% if index != education.size - 1 %>

<% end #if %>
<% end #each_with_index %>
    \end{adjustwidth}
\end{document}
