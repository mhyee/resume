\documentclass[10pt,letterpaper]{article}

\usepackage[utf8]{inputenc}
\usepackage[T1]{fontenc}
\usepackage[margin={1.5cm,1.2cm}]{geometry}
\usepackage{changepage}
\usepackage{libertine}
\usepackage{microtype}
\usepackage{titlesec}
\usepackage{enumitem}
\usepackage{xcolor}
\usepackage{relsize}
\usepackage{hyperref}

\titleformat*{\section}{\Large\bfseries\scshape}
\definecolor{foo}{rgb}{0.18,0.31,0.65}
\hypersetup{colorlinks=true,urlcolor=foo}
\pagestyle{empty}
\setlength{\parindent}{0pt}
\setlist{nolistsep}

\newcommand{\indentleft}{0.4cm}
\newcommand{\indentright}{0cm}
\newcommand{\interlist}{0.5em}
\newcommand{\postsubhead}{-0.7em}
\newcommand{\postsection}{-1em}

\begin{document}
\raggedright

  {\huge\textbf{<%= contact["name"] %>}}

<% site = contact["site"] %>
<% email = contact["email"] %>
<% github = contact["github"] %>
  {\small
    \href{http://<%= github %>}{<%= github %>}
    \textbullet\
    \href{mailto:<%= email %>}{<%= email %>}
    \textbullet\
    \href{http://<%= site %>}{<%= site %>}
<% if contact["address"] && contact["cell"] %>
    \hfill
    <%= contact["address"] %>
    \hfill
    <%= contact["cell"] %>
<% end #if %>
  }
  \hrule

  \section*{Research Experience}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
<% research.each_with_index do |entry, index| %>
      \textbf{<%= entry["position"] %>}
      \hfill
      \textbf{<%= entry["location"] %>}\\
      \textit{<%= entry["institution"] %>}
      \hfill
      \textit{<%= entry["start"] %> -- <%= entry["end"] %>}
<% if entry["description"] %>
      \begin{itemize}
<% entry["description"].each do |item| %>
        \item <%= item %>
<% end #each %>
      \end{itemize}
<% end #if %>
<% if index != research.size - 1 %>
      \vspace{\interlist}

<% end #if %>
<% end #each_with_index %>
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Work Experience}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
<% work.each_with_index do |entry, index| %>
      \textbf{<%= entry["title"] %>}
      \hfill
      \textbf{<%= entry["location"] %>}\\
      \textit{<%= entry["employer"] %>}
      \hfill
      \textit{<%= entry["start"] %> -- <%= entry["end"] %>}
<% if entry["description"] %>
      \begin{itemize}
<% entry["description"].each do |item| %>
        \item <%= item %>
<% end #each %>
      \end{itemize}
<% end #if %>
<% if index != work.size - 1 %>
      \vspace{\interlist}

<% end #if %>
<% end #each_with_index %>
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Publications}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
      \begin{itemize}
<% publications.each do |entry| %>
<% authors = entry["authors"] %>
<% title = entry["title"] %>
<% published_in = entry["in"] %>
<% date = entry["date"] %>
        \item <%= authors %>,
              <%= title %>,
              \textbf{<%= published_in %>},
              <%= date %>
<% end #each %>
      \end{itemize}
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Technical Skills}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
      \begin{itemize}
<% skills.each do |entry| %>
        \item <%= entry %>
<% end #each %>
      \end{itemize}
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Teaching Experience}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
<% teaching.each_with_index do |entry, index| %>
      \textbf{<%= entry["title"] %>}
      \hfill
      \textbf{<%= entry["location"] %>}\\
      \textit{<%= entry["employer"] %>}
      \hfill
      \textit{<%= entry["start"] %> -- <%= entry["end"] %>}
<% if entry["description"] %>
      \begin{itemize}
<% entry["description"].each do |item| %>
        \item <%= item %>
<% end #each %>
      \end{itemize}
<% end #if %>
<% if index != teaching.size - 1 %>
      \vspace{\interlist}

<% end #if %>
<% end #each_with_index %>
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Service}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
<% service.each_with_index do |entry, index| %>
      \textbf{<%= entry["position"] %>}
      \begin{itemize}
<% list = entry["list"].map do |e| %>
<%   note = if e["note"] then " (#{e['note']})" else "" end %>
<%   "\\mbox{\\href{#{e['link']}}{#{e['name']}}#{note}}" %>
<% end #map %>
        \item <%= list.join(", ") %>
      \end{itemize}
<% if index != service.size - 1 %>
      \vspace{\interlist}
<% end #if %>
<% end #each_with_index %>
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Activities}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
      \begin{itemize}
<% activities.each do |entry| %>
        \item <%= entry %>
<% end #each %>
      \end{itemize}
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Awards}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
      \begin{itemize}
<% awards.each do |entry| %>
        \item <%= entry["name"] %>
        \hfill
        \textit{<%= entry["date"] %>}
<% end #each %>
      \end{itemize}
    \end{adjustwidth}
    \vspace{\postsection}

  \section*{Education}
    \vspace{\postsubhead}
    \begin{adjustwidth}{\indentleft}{\indentright}
<% education.each_with_index do |entry, index| %>
      \textbf{<%= entry["level"] %>}
      \hfill
      \textbf{<%= entry["location"] %>}\\
      \textit{<%= entry["institution"] %>}
      \hfill
<% if entry["date"].nil? %>
      \textit{<%= entry["start"] %> -- <%= entry["end"] %>}\\
<% else %>
      \textit{<%= entry["date"] %>}
<% end #if %>
<% if entry["note"] %>
      \begin{itemize}
        \item <%= entry["note"] %>
      \end{itemize}
<% end #if %>
\vspace{\interlist}
<% if index != education.size - 1 %>

<% end #if %>
<% end #each_with_index %>
    \end{adjustwidth}
\end{document}
