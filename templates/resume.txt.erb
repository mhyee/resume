<%= contact["name"].upcase + "\n" %>

http://<%= contact["site"] %> * http://<%= contact["github"] %> * <%= contact["email"] %>
<% if contact["address"] && contact["cell"] %>
<%= contact["address"] %> * <%= contact["cell"] + "\n" %>
<% end #if %>
<% if contact["citizenship"] %>
<%= "**" + contact["citizenship"] + "**\n" %>
<% end #if%>
--------------------------------------------------------------------------------
<% def wrap(text) %>
<%   text.gsub(/\]\(/, "\] \(").gsub(/(.{1,74})(\s+|$)/, "\\1\n      ").strip %>
<% end #def %>

EXPERIENCE

<% work.each do |entry| %>
  <%= entry["title"] %>
  <%= entry["employer"] %>, <%= entry["location"] %>
  <%= entry["date"] %>
<% if entry["description"] %>
<% entry["description"].each do |item| %>

    - <%= wrap item %>
<% end #each %>

<% else %>

<% end #if %>
<% end #each %>

PUBLICATIONS

<% publications.each_with_index do |entry, index| %>
<% authors = entry["authors"] %>
<% date = entry["date"] %>
<% title = entry["title"] %>
<% published_in = entry["in"] %>
<% entry_text = "#{authors} (#{date}). #{title}, #{published_in}." %>
  <%= wrap entry_text %>
<% if index != publications.size - 1 %>

<% end #if %>
<% end #each_with_index %>


TECHNICAL SKILLS

<% skills.each do |entry| %>
    - <%= wrap entry %>
<% end #each %>


EDUCATION

<% education.each_with_index do |entry, index| %>
  <%= entry["level"] %>
  <%= entry["institution"] %>, <%= entry["location"] %>
  <%= entry["date"] %>
<% if entry["notes"] %>
<% entry["notes"].each do |item| %>
      <%= item %>
<% end #each %>
<% end #if %>
<% if index != education.size - 1 %>

<% end #if %>
<% end #each_with_index %>
