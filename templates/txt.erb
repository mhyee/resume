<%= contact["name"].upcase + "\n" %>

http://<%= contact["site"] %> * http://<%= contact["github"] %> * <%= contact["email"] %>
<% if contact["address"] && contact["cell"] %>
<%= contact["address"] %> * <%= contact["cell"] + "\n" %>
<% end #if %>
<% if contact["citizenship"] %>
<%= "**" + contact["citizenship"] + "**\n" %>
<% end #if%>
--------------------------------------------------------------------------------

EXPERIENCE

<% work.each do |entry| %>
  <%= entry["title"] %>
  <%= entry["employer"] %>, <%= entry["location"] %>
  <%= entry["date"] %>
<% if entry["description"] %>
<% entry["description"].each do |item| %>

    - <%= wrap item, 6 %>
<% end #each %>

<% else %>

<% end #if %>
<% end #each %>

PUBLICATIONS
<% publications.each do |entry| %>
<% authors = entry["authors"] %>
<% date = entry["date"] %>
<% title = entry["title"] %>
<% published_in = entry["in"] %>
<% entry_text = "#{authors} (#{date}). #{title}, #{published_in}." %>

  <%= wrap entry_text, 4 %>
<% end #each %>


TECHNICAL SKILLS
<% skills.each do |entry| %>

    - <%= wrap entry, 6 %>
<% end #each %>


EDUCATION
<% education.each do |entry| %>

  <%= entry["level"] %>
  <%= entry["institution"] %>, <%= entry["location"] %>
  <%= entry["date"] %>
<% if entry["notes"] %>
<% entry["notes"].each do |item| %>
      <%= item %>
<% end #each %>
<% end #if %>
<% end #each %>
